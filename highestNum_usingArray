//Week4 practice: using array
#include <iostream>
using namespace std;

int main()
{
	int i, score[5], max; //score: 0,1,2,3,4
	cout << "Enter 5 scores:  \n";
	max = 0;
	for (i = 0; i < 5; i++) 
	{ //finding highest score
		cin >> score[i];
		if (score[i] > max) //score: 1,2,3,4
			max = score[i];
	}
	
	cout << "The highest score is : " << max << endl;
	cout << "and the differences with this and the others are: \n";
	for (i = 0; i < 5; i++)
	{
		cout << score[i] << " off by "
			<< (max - score[i]) << endl;
	}
	return 0;
}
