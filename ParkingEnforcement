//W5: class member variable
#include <iostream>
#include <cstdlib>
using namespace std;

class DayOfYear
{
private:
	int month;
	int day;
	void testDate();
public:
	DayOfYear(int month, int day);
	DayOfYear(int month);
	DayOfYear();
	void input();
	void output();
	int getMonth();
	int getDay();
};

class Holiday
{
private:
	DayOfYear date; //member variable :class type
	bool parkingEnforcement; //true if enforced
public:
	Holiday();
	Holiday(int month, int day, bool theEnforcement);
	void output();
};

int main()
{
	Holiday h(2, 14, true);
	Holiday k(4,18 ,false);
	Holiday d; //!! No () when using default constructor!!
	cout << "Testing the class Holiday. \n";
	h.output();
	k.output();
	d.output();
	return 0;
}

Holiday::Holiday() : date(1, 1), parkingEnforcement(false) 
{ //invocation of constructors from the class DayOfYear.
	//empty
}

Holiday::Holiday(int month, int day, bool theEnforcement)
	:date(month, day), parkingEnforcement(theEnforcement)
{
	//empty

}

void Holiday::output()
{
	date.output();
	cout << endl;
	if (parkingEnforcement)
		cout << "Parking laws will be enforced.\n";
	else
		cout << "Parking laws will not be enforced.\n";

}

DayOfYear::DayOfYear(int month, int day)
	:month(month), day(day)
{
	testDate();
}

//uses iostream and stdlib:
void DayOfYear::testDate()
{
	if ((month < 1) || (month > 12))
	{
		cout << "Illegal month value.\n" << endl;
		exit(1);
	}
	if ((day < 1) || (day > 31))
	{
		cout << "Illegal day value.\n" << endl;
		exit(1);
	}
}

//uses iosteram
void DayOfYear::output()
{
	switch (month)
	{
	case 1:
		cout << "January"; break;
	case 2:
		cout << "February"; break;
	case 3:
		cout << "March"; break;
	case 4:
		cout << "April"; break;
	case 5:
		cout << "May"; break;
	case 6:
		cout << "June"; break;
	case 7:
		cout << "July"; break;
	case 8:
		cout << "August"; break;
	case 9:
		cout << "September"; break;
	case 10:
		cout << "October"; break;
	case 11:
		cout << "November"; break;
	case 12:
		cout << "December"; break;
	default:
		cout << "Error in DayOfYear::output. Contact us.";
	}
	cout << day;
}
