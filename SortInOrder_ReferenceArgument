#include <iostream>
using namespace std;
// sort three numbers using function taking reference argument
void sort(int &smallest, int &middle, int &biggest);

int main() {
  int x, y, z;
  char ans;
  do {
    cout << "Enter three integers: ";
    cin >> x >> y >> z; // 1 10 5/ 5 1 10 / 5 10 1
    sort(x, y, z);      // 10 20 30
    cout << x << " " << y << " " << z << endl;
    cout << "Again? (Y/y) or type any others to quit: ";
    cin >> ans;
  } while (ans == 'y' || ans == 'Y');
  return 0;
}

void sort(int &a, int &b, int &c) {
  int temp;

  if (a > b) {
    temp = a;
    a = b;
    b = temp;
  }
  if (b > c) {
    temp = b;
    b = c;
    c = temp;
  }
  if (a > b) {
    temp = a;
    a = b;
    b = temp;
  }
}
