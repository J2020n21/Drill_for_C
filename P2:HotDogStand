#include <cstdlib>
#include <iostream>
using namespace std;

class HotDogStand {
public:
  HotDogStand();
  HotDogStand(int newID, int newNumSold);
  int GetID();
  void SetID(int newID);
  void JustSold();
  int GetNumSold();
  static int GetTotalSold();

private:
  static int totalSold;
  int numSold;
  int ID;
};

int HotDogStand::totalSold = 0;

HotDogStand::HotDogStand() : ID(0), numSold(0) { SetID(ID); }

HotDogStand::HotDogStand(int newID, int newNumSold)
    : ID(newID), numSold(newNumSold) {
  SetID(ID);
}

int HotDogStand::GetID() { return ID; }

void HotDogStand::SetID(int newID) {
  ID = newID;
  numSold = 0;
}

void HotDogStand::JustSold() {
  numSold++;
  totalSold++;
}

int HotDogStand::GetNumSold() { return numSold; }

int HotDogStand::GetTotalSold() {
  // TODO !!!!!
  return totalSold;
}

int main() {
  HotDogStand s1(1, 0), s2(2, 0), s3(3, 0); // ID, Sold

  // sold at stand 1,2
  s1.JustSold();
  s2.JustSold();
  s1.JustSold();

  cout << "Stand " << s1.GetID() << " sold " << s1.GetNumSold() << endl;
  cout << "Stand " << s2.GetID() << " sold " << s2.GetNumSold() << endl;
  cout << "Stand " << s3.GetID() << " sold " << s3.GetNumSold() << endl;
  cout << "Total sold = " << s1.GetTotalSold() << endl;
  cout << endl;

  // sold some more
  s3.JustSold();
  s1.JustSold();

  cout << "Stand " << s1.GetID() << " sold " << s1.GetNumSold() << endl;
  cout << "Stand " << s2.GetID() << " sold " << s2.GetNumSold() << endl;
  cout << "Stand " << s3.GetID() << " sold " << s3.GetNumSold() << endl;
  cout << "Total sold = " << s1.GetTotalSold() << endl;
  cout << endl;
  return 0;
}
