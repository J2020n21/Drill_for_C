#include <iostream>
#include <fstream>
#include <string>
using namespace std;

void getHighScore(string &name, int &score);

int main() {

  string name = " ";
  int score = 0;
  getHighScore(name, score);
}

void getHighScore(string &h_p, int &h_s) //textfile order: person /n score
{
  string person;
  int score = 0;

  fstream readStream;
  readStream.open("scores.txt");

  while (readStream >> h_p >> h_s) {
    if (score < h_s) // keep track of higest score & person
    {
      score = h_s;
      person = h_p;
    }
  }
  h_s = score;
  h_p = person;

  cout << "highest score: " << h_s << endl;
  cout << "highest person: " << h_p << endl;
}
